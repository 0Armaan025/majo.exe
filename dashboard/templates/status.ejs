<%- include("includes/head", { bot, user, path, description, title: "Status" , twitter, url }) %>
 <div class="container">
  <% function capitalize(string) { return string.charAt(0).toUpperCase() + string.slice(1); } %>
   <h1 class="headerinfo">
    <a style="color: #fff" href="https://discord.com/users/<%= client.user.id %>" target="_blank" rel="noopener"><%= capitalize(bot.user.username) %> in numbers</a>
   </h1>
   <div class="boxes">
    <div class="box box1">
     <div class="boxcontainter">
      <h3 class="boxheader">
       <%= bot.guilds.cache.size %>
      </h3>
      <p class="heading">Guilds</p>
     </div>
    </div>
    <div class="box box2">
     <div class="boxcontainter">
      <h3 class="boxheader">
       <%= bot.channels.cache.size %>
      </h3>
      <p class="heading">Total Channels</p>
     </div>
    </div>
    <div class="box box3">
     <div class="boxcontainter">
      <h3 class="boxheader">
       <%= bot.guilds.cache.reduce((a, g)=> a + g.memberCount, 0) %>
      </h3>
      <p class="heading">Total members</p>
     </div>
    </div>
    <div class="box box4">
     <div class="boxcontainter">
      <h3 class="boxheader" title="[!] This is Discord API ping, not actual bot ping">
       <%= Math.round(bot.ws.ping) %>ms
      </h3>
      <p class="heading">Ping</p>
     </div>
    </div>
    <div class="box box1">
     <div class="boxcontainter">
      <h3 class="boxheader" title="[!] Approximate amout">
       Soon!
      </h3>
      <p class="heading">Total messages send</p>
     </div>
    </div>
    <div class="box box2">
     <div class="boxcontainter">
      <h3 class="boxheader" title="[!] Approximate amout">
       Soon!
      </h3>
      <p class="heading">Total commands sent</p>
     </div>
    </div>
   </div>

   <hr>

   <h1 class="headerinfo">Uptime</h1>
   <% totalSeconds=(bot.uptime / 1000); days=Math.floor(totalSeconds / 86400); totalSeconds %=86400;
    hours=Math.floor(totalSeconds / 3600); totalSeconds %=3600; minutes=Math.floor(totalSeconds / 60)
    seconds=Math.floor(totalSeconds % 60); %>

    <p class="uptime">
     <%= days %> Days, <%= hours %> hours, <%= minutes %> minutes, <%= seconds %> seconds
    </p>

    <% if (config.status) { %>
     <hr>
     <h1 class="headerinfo">Status</h1>
     <a class="edit button status reload" href="<%= config.status %>"><span class="reload-container"><%- include('includes/icons/status.ejs') %>Check server's status</span></a>
       <br>
       <a class="majo-ad-link" href="https://hetrixtools.com/848593.html" target="_blank">
       <div class="majo-ad-container"><div class="majo-ad">Ad</div>Hetrixtools - Free uptime monitor<br>15 Uptime Monitors • 1 Minute Interval • Free Forever!</div>
       </a>
     <% } %>
      <%- include("includes/footer") %>