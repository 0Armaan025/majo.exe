<%- include("partials/head", { bot, user, path, title: "Contact" }) %>

<% if (user) { %>
 <script>var userID = <%= user.id %> </script>
 <div class="container-contact">
 <div class="wrap-contact">
 <form class="contact-form validate-form">
 <span class="contact-form-title"></span>
 <div class="wrap-input rs1-wrap-input">
  <span class="label">Name</span>
  <input disabled class="input" type="text" name="name" placeholder="Name"value="<%= user.username %>#<%= user.discriminator %>"/>
  <span class="input-line"></span>
 </div>
 <div class="wrap-input rs1-wrap-input">
  <span class="label">Email (optional)</span>
  <input class="input" type="email" name="email" placeholder="Email"/>
  <span class="input-line"></span>
 </div>
 <div class="wrap-input">
  <span class="label">Message</span>
  <textarea class="input" name="message" placeholder="Message" required></textarea>
  <span class="input-line"></span>
 </div>
 <div id="captcha"></div>
 <div class="container-contact-form-btn">
  <button class="contact-form-btn" type="submit">Send</button>
 </div>
 </form>
 </div>
 </div>
 <script type="text/javascript">
  var verifyCallback = function(response) {
   alert(response);
  };
  var onloadCallback = function() {
  grecaptcha.render('captcha', {
   'sitekey' : '6LdxomAbAAAAACa_5IkStpLjoi4VsVhzs9Rnxx-W',
   'callback' : verifyCallback,
   'theme' : 'dark'
  });
  };
 </script>
 <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
<% } else { %>
 <div class="container-contact">
  <div class="wrap-contact">
  <form class="contact-form validate-form">
  <span class="contact-form-title"></span>
  <div class="wrap-input rs1-wrap-input">
   <span class="label">Name</span>
   <input class="input" title="Please login to contact us!" type="text" name="name" placeholder="Name" disabled/>
   <span class="input-line"></span>
  </div>
  <div class="wrap-input rs1-wrap-input">
   <span class="label">Email (optional)</span>
   <input class="input" title="Please login to contact us!" type="email" name="email" placeholder="Email" disabled/>
   <span class="input-line"></span>
  </div>
  <div class="wrap-input">
   <span class="label">Message</span>
   <textarea class="input" title="Please login to contact us!" name="message" placeholder="Message" disabled></textarea>
   <span class="input-line"></span>
  </div>
 <div class="container-contact-form-btn">
  <p>You must be logged in to contact us!</p>
 </div>
 <div class="container-contact-form-btn">
  <a href="https://majoexe.herokuapp.com/login" class="link-button green">Login</a>
 </div>
 </form>
 </div>
 </div>
<% } %>

<script src="<%domain%>/js/contact.js"></script>

<%- include("partials/footer") %>
