<%- include("partials/head", { bot, user, path, description, title, twitter, url, image }) %>

<% function capitalizeFirstLetter(string) { return string.charAt(0).toUpperCase() + string.slice(1); } %>

<% if (bot.user.avatar) { botavatar = "https://cdn.discordapp.com/avatars/" + bot.user.id + "/" + bot.user.avatar + ".png?size=512";
 } else {
 botavatar = "https://" + hostname + "/pics/invaild-avatar.png"; } %>

 <style>
  .hero-section {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-attachment: fixed;
    background-position: center;
    background-image: url(https://cdn.discordapp.com/attachments/185046628732895232/204497752091000832/bg3.svg);
    width: 100%;
    height: 100vh;
    color: var(--light);
    background-size: 50%;
    transition: 500ms all;
}
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 1224px;
    margin-right: auto;
    margin-left: auto;
}

.hero-title {
font-size: 40px;
margin-bottom: 0.1em;
font-family: "Poppins";
margin-top: 5px;
}

.hero-title2 {
    font-size: 20px;
font-family: "Poppins";
margin-top: 5px;
}

button {
 padding: 10px 25px;
 background: rgb(var(--edit));
 font-family: "Poppins";
 border: none;
 border-radius: 3px;
 font-weight: 400;
 color: #fff;
 cursor: pointer;
 font-size: 15px;
 margin: 20px;
 margin-top: 20px;
 margin-top: 0;
}



</style>
<section class="hero-section">
 <div class="hero-grid">
 <div class="hero-content">
 <img class="img" src="<%= botavatar %>" alt="Avatar" />
 <% if (user) { %>
  <p class="hero-title">Yay!</p>
  <p class="hero-title2">You connected your Discord account! Go to your dashboard and me to your server!</p>
  <button href="https://<%= domain %>/dashboard">Go to Dashboard</button>
  <button href="#features">See Features</button>
  <% } else { %>
  <p class="hero-title">Hi! I'm <%= capitalizeFirstLetter(bot.user.username) %></p>
  <p class="hero-title2">I have almost everything - Fun, Memes, Images, Giveaway, Economy, Anime and NSFW!<br />I serve over 100 commands<br />To get started with me just login with your Discord account</p>
  <button href="https://<%= domain %>/login">Login</button>
  <button>More</button>
  <% } %>
 </div>
 </div>
</section>

<%- include("partials/footer") %>
