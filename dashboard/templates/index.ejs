<%- include("includes/head", { bot, user, path, description, title, twitter, url }) %>

<% function capitalize(string) { return string.charAt(0).toUpperCase() + string.slice(1); } %>

<% if (bot.user.avatar) {
 botavatar = `https://cdn.discordapp.com/avatars/${bot.user.id}/${bot.user.avatar}`;
 } else {
 botavatar = `${domain}/pics/invaild-avatar.png`;
 } %>
<section class="hero-section">
 <div class="hero-grid">
 <div class="hero-content">
 <img class="img" src="<%= botavatar %>" alt="Avatar" />
 <% if (user) { %>
  <p class="hero-title">Yay!</p>
  <p class="hero-title2">You connected your Discord account! Go to your dashboard and me to your server!</p>
  <a href="<%= domain %>/dashboard" class="link-button green reload"><span class="reload-container"><%- include('includes/icons/dashboard-main.ejs') %> Dashboard</span></a>
  <% } else { %>
  <p class="hero-title">Hi! I'm <%= capitalize(bot.user.username) %></p>
  <p class="hero-title2">I have almost everything - Fun, Memes, Images, Giveaway, Economy, Anime and NSFW!<br />I serve over 100 commands<br />To get started with me just login with your Discord account</p>
  <a href="<%= domain %>/login" class="link-button green">Login</a>
  <a href="#feautures" class="link-button">More</a>
  <% } %>
 </div>
 </div>
</section>
<link rel="stylesheet" type="text/css" href="<%= domain %>/css/cards.css">

<div class="content-container">
 <div id="feautures" class="product-row">
  <div class="product-image">
   <img src="https://media.discordapp.net/attachments/859772658403901440/891003669984710726/embeds.png">
  </div>
  <div class="product-text">
   <h2 class="product-title">Many commands!</h2>
    <p><%= bot.user.username.split(" ")[0] %> has more than 150 commands. From moderation to memes commands. Everything is clear and quick to use!</p>
   </div>
  </div>
</div>
<%- include("includes/footer") %>
